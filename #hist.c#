#include <stdio.h>

#define OUT 0
#define IN 1
#define MAXLEN 10

int main(){

  int arr_char[];
  int c, nc, tracker;
  int i;

  for (i = 0; i < MAXLEN; ++i) /*array indexed 0 to 9 */
    arr_char[i] = 0;
  
  tracker = IN
  while ((c = getchar()) != EOF){
    ++nc;
    if (c == '\n' || c == ' ' || c == '\t'){
      --nc;
      tracker = OUT;
    }
    if (tracker == OUT){
      ++arr_char[nc];
    } 
  }

  for (j = 0; j < MAXLEN; ++j)
    printf("array values: %d \n", arr_char[j];
 }
  